<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dlk-dir=lickey -classpath %classpath org.restheart.Bootstrapper etc/restheart-platform-core.yml -e etc/dev.properties</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Dlk-dir=lickey -classpath %classpath org.restheart.Bootstrapper etc/restheart-platform-core.yml -e etc/dev.properties</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dlk-dir=lickey -classpath %classpath org.restheart.Bootstrapper etc/restheart-platform-core.yml -e etc/dev.properties</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Integration Tests</actionName>
            <displayName>Integration Tests</displayName>
            <goals>
                <goal>verify</goal>
            </goals>
            <properties>
                <skipITs>false</skipITs>
            </properties>
        </action>
    </actions>
